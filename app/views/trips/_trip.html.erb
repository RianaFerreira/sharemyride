<tr>
  <td><%= link_to trip.dept_date.strftime("%a, %m-%d-%y"), trip_path(trip.id) %></td>
  <td><%= trip.start_point.name %></td>
  <td><%= trip.end_point.name %></td>
  <td id="seats-<%=trip.id%>"><%= trip.seats_available %></td>
  <td><%= number_to_currency(trip.seat_cost) %></td>
  <td><%= link_to "Book", book_path(trip), :class => "btn_book button" %></td>
</tr>